<!-- Left Bar -->
<div class="container-fluid m-0 p-0">
  <div class="row m-0">
    <div class="col-md-8 m-0 p-0 col-xs-12">
      <form id="chat-input" class="p-4">
        <div class="row align-items-end">
          <div class="col-6">
            <label for="room-name">Room name</label>
            <input id="room-name" class="form-control form-control-lg" type="text" placeholder="Enter room name">
          </div>
          <div class="col-4">
            <label for="room-type">Room type</label>
            <select id="room-type" class="form-control form-control-lg">
            <option>Select room type</option>
            </select>
          </div>
          <div class="col-2">
            <button class="btn btn-lg btn-block" type="submit" id="create-new">Create</button>
          </div>
        </div>
      </form>

      <div class="room-list">
      {{#each rooms}}
        {{> room-info }}
      {{/each}}
      </div>
    </div>
    <div class="col-md-4 p-5 sidenav">
      <div>
        <h4>Online Users</h4>
      </div>
     {{#each rooms}}
        {{> online-user }}
      {{/each}}
    </div>
  </div>
</div>

<script src="/assets/javascript/add-room.js"></script>
