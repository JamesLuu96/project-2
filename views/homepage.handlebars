<!-- Left Bar -->
<div class="container-fluid m-0 p-0">
  <div class="row m-0">
    <div class="col-8 p-5">
      <h2>Chat rooms</h2>
      <form class="input-group mb-3" id="chatInput">
        <input type="text" class="room-name form-control" placeholder="New chat room" aria-label="Recipient's username" aria-describedby="button-addon2">
        <button class="btn btn-outline-secondary ml-2" type="submit" id="button-addon2">Create</button>
      </form>
      {{#each rooms}}
        {{> room-info }}
      {{/each}}
    </div>
    <div class="col-4 p-4 sidenav">
      <div>
        <h2>Online Users</h2>
      </div>
     {{#each rooms}}
        {{> online-user }}
      {{/each}}
    </div>
  </div>
</div>

<script src="/assets/javascript/add-room.js"></script>
