<!-- Top Bar -->
<nav class="navbar navbar-expand-lg navbar-light" id="topbar">
     <h2>CHAT</h2>
</nav>

<!-- Left Bar -->
<div class="row" id="roomTitle">
     <h2 class="ml-4">Chat Rooms</h2>
</div>

<div class="container">
     <div class="row">
          <div class="col-sm-12">
               <form class="input-group mb-3" id="chatInput">
                    <input type="text" class="room-name form-control" placeholder="New chat room"
                         aria-label="Recipient's username" aria-describedby="button-addon2">
                    <button class="btn btn-outline-secondary ml-2" type="submit" id="button-addon2">Create</button>
               </form>
               {{#each rooms}}
               <a href="/{{id}}">
                    <div class="row" id="room">{{room_name}}<span
                              class="badge badge-info pull-right roomUser">{{user.username.length}}</span><i
                              class="far fa-user pull-right mr-2" id="roomicon"></i>
                    </div>
               </a>
               {{/each}}

          </div>
          <div class="col-sm-4">
               <div class="sidenav">
                    <div class="" id="usernameTitle">
                         <h2>Online Users</h2>
                    </div>
                    {{#each rooms}}
                    <div class="d-flex justify-content-between pr-4" id="username">
                         <span><i class="fas fa-user-secret mr-3"></i>{{user.username}} </span>
                         <span><i class="fas fa-circle online-users"></i></span>
                    </div>

                    {{/each}}
               </div>
          </div>
     </div>



     <script src="/javascript/add-room.js"></script>
