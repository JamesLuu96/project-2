<nav class="navbar navbar-expand-lg" id="subnav">
     <h2 class="chat-room-title pl-5" data-id="{{id}}">{{room.room_name}}</h2>
     <h3 class="chat-room-type pl-5">{{room.type.type_name}}</h3>
     {{#if (check_room room.user.username myUser)}}<button class="trash">Delete Room</button>{{/if}}
</nav>

<div class="row wrapper">
     <div class="col-2 col-sm-4 col-md-2 col-lg-2 col-xl-3" id="room-users">
          <h2>Current Users:</h2>
          <ul>
          </ul>
     </div>
     <div class="col-8 col-sm-7 col-md-8 col-lg-7 col-xl-7">
          <div class="">
               <div class="row">
                    <div class="col-12" id="chatBox">
                         <ul id="chatList" style="list-style-type:none">

                              <li></li>
                         </ul>
                    </div>
               </div>
          </div>
          <div class="">
               <div class="input-group mb-3">
