                    <form class="chat-form">
                         <input type="text" id="chatInput" placeholder="Enter Message Here"
                              aria-label="Recipient's username" aria-describedby="button-addon2" required autocomplete="off">
                         <button type="submit"><i class="fas fa-arrow-circle-right"></i></button>
